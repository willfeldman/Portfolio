{
    "build": {
        "env": {
            "NPM_CONFIG_LEGACY_PEER_DEPS": "true",
            "NPM_FLAGS": "--legacy-peer-deps"
        }
    },
    "rewrites": [
        { "source": "/experience/:id", "destination": "/index.html" },
        { "source": "/(.*)", "destination": "/index.html" }
      ]
}