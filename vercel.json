{
    "build": {
        "env": {
            "NPM_CONFIG_LEGACY_PEER_DEPS": "true",
            "NPM_FLAGS": "--legacy-peer-deps"
        }
    },
    "routes": [
        {
            "src": "/(.*).html",
            "dest": "/index.html"
        },
        {
            "src": "/(.*).",
            "dest": "/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}