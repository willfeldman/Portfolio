{
    "rewrites": [
        {
            "source": "/static/(.*)",
            "destination": "/build/static/$1"
        },
        {
            "source": "/favicon.ico",
            "destination": "/build/favicon.ico"
        },
        {
            "source": "/manifest.json",
            "destination": "/build/manifest.json"
        },
        {
            "source": "/robots.txt",
            "destination": "/build/robots.txt"
        },
        {
            "source": "/(.*)",
            "destination": "/build/index.html"
        }
    ],
    "build": {
        "env": {
            "NPM_CONFIG_LEGACY_PEER_DEPS": "true",
            "NPM_FLAGS": "--legacy-peer-deps"
        }
    }
}